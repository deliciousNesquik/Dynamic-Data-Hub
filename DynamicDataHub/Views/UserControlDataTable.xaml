<UserControl x:Class="DynamicDataHub.UserControlDataTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamicDataHub"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid Name="MainGrid">
        <DataGrid Style="{StaticResource DatagridStyle}" Name="DataTable" AutoGenerateColumns="True"  ItemsSource="{Binding }" CellEditEnding="DataTable_CellEditEnding" PreparingCellForEdit="DataTable_PreparingCellForEdit">
            <DataGrid.ContextMenu>
                <ContextMenu Name="dataTableContextMenu">
                    <MenuItem Name="DeleteRow" Click="DeleteRow_Click" Header="Удалить"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</UserControl>
