<Window x:Class="DynamicDataHub.DDHManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicDataHub"
        mc:Ignorable="d"
        Title="Менеджер базы данных" 
        Height="450" 
        Width="700" 
        WindowStartupLocation="CenterScreen" 
        Closing="Window_Closing" 
        ContentRendered="Window_ContentRendered"
        MinHeight="450"
        MinWidth="700"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="ColumnObjectExplorer" Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="RowObjectExplorer" Height="35"/>
            <RowDefinition Name="RowConnecting" Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Frame Name="FrameObjectExplorer" Grid.Column="0" Grid.Row="0" BorderThickness="1.1 0 1.1 1.1"/>
        <Frame Name="FrameConnectiong" Grid.Column="0" Grid.Row="1" BorderThickness="1.1 0 1.1 1.1"/>
        <Frame Name="FrameExplorer" Grid.Column="0" Grid.Row="2" BorderThickness="1.1 0 1.1 1.1"/>
        <Frame Name="FrameControlElements" Grid.Column="1" Grid.Row="0" BorderThickness="0 0 1.1 1.1"/>
        <Frame Name="FrameTableData" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" BorderThickness="0 0 1.1 1.1"/>

        <StackPanel Name="SPWrap" Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">
            <TextBlock Visibility="Visible" HorizontalAlignment="Left" VerticalAlignment="Center" Name="TBObjectExplorer" Text="Object Explorer" Grid.Column="0" Grid.Row="1" Margin="5 0 0 0"/>

            <Button Name="WrapColumn" Grid.Column="0" Grid.Row="1" Width="20" Height="20" Margin="68.5 5 0 5" Click="WrapColumn_Click" RenderTransformOrigin="0.5,0.5">
                <!--87-->
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <TextBlock Text="◀️" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0">
            <Button Visibility="Visible" Name="Connect" Width="65" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0" Click="Connect_Click">
                <TextBlock Text="Connect" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Button Visibility="Visible" Name="Disconnect" Width="75" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0" Click="Disconnect_Click">
                <TextBlock Text="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Button Name="Refresh" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0" Click="Refresh_Click">
                <TextBlock Text="⟲" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>


        <ListBox Name="ListBoxTableList" ItemsSource="{Binding TableListCollection}" Grid.Row="2" Grid.Column="0">
        </ListBox>
        
        
    </Grid>
</Window>
