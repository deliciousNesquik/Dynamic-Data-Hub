<Window x:Class="DynamicDataHub.DDHManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicDataHub"
        mc:Ignorable="d"
        Title="Менеджер базы данных" 
        Height="450" 
        Width="700" 
        WindowStartupLocation="CenterScreen" 
        Closing="Window_Closing" 
        ContentRendered="Window_ContentRendered"
        MinHeight="450"
        MinWidth="700"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="Button" x:Key="LabelButtonStyle">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Button.BorderThickness" Value="1"></Setter>
                    <Setter Property="Button.BorderBrush" Value="White"></Setter>
                    <Setter Property="Button.Background" Value="Transparent"></Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Button.Background" Value="Transparent"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelText">
            <Setter Property="Foreground" Value="White"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"></Setter>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextBlock.Background" Value="Transparent"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="ColumnObjectExplorer" Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="RowObjectExplorer" Height="40"/>
            <RowDefinition Name="RowConnecting" Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1">
            <Button Margin="10" Template="{StaticResource LabelButton}" Style="{StaticResource LabelButtonStyle}" Visibility="Visible" Name="NewQuery" Width="65" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource LabelText}" Text="New Query" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Button Margin="10" Template="{StaticResource LabelButton}" Style="{StaticResource LabelButtonStyle}" Visibility="Visible" Name="Settings" Width="65" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource LabelText}" Text="Settings" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
        <Frame Name="FrameObjectExplorer" Grid.Column="0" Grid.Row="0" BorderThickness="1.1 0 1 1"/>
        <Frame Name="FrameConnectiong" Grid.Column="0" Grid.Row="1" BorderThickness="1.1 0 1 1"/>
        <Frame Name="FrameExplorer" Grid.Column="0" Grid.Row="2" BorderThickness="1.1 0 1 1"/>
        <Frame Name="FrameControlElements" Grid.Column="1" Grid.Row="0" />
        <Frame Name="FrameTableData" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" />
        <Frame Name="QueryFrame" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" />
        <Border CornerRadius="0 0 40 0" Grid.Row="0" Grid.Column="1" BorderBrush="White" BorderThickness="0 0 1 1"></Border>
        <StackPanel Name="SPWrap" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0">
            <TextBlock Margin="10" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" Name="TBObjectExplorer" Text="Object Explorer" Grid.Column="0" Grid.Row="1" />

            <Button Template="{StaticResource MainButton}" Name="WrapColumn" Grid.Column="0" Grid.Row="1" Width="20" Height="20" Margin="48.5 5 0 5" Click="WrapColumn_Click" RenderTransformOrigin="0.5,0.5">
                <!--87-->
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
                <TextBlock Text="◀️" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0">
            <Button  Template="{StaticResource LabelButton}" Style="{StaticResource LabelButtonStyle}" Visibility="Visible" Name="Connect" Width="65" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0" Click="Connect_Click">
                <TextBlock Style="{StaticResource LabelText}" Text="Connect" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Button Template="{StaticResource LabelButton}" Style="{StaticResource LabelButtonStyle}"  Visibility="Visible" Name="Disconnect" Width="75" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0" Click="Disconnect_Click">
                <TextBlock Style="{StaticResource LabelText}" Text="Disconnect" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Button Template="{StaticResource MainButton}" Name="Refresh" Width="20" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 0 0 0" Click="Refresh_Click">
                <TextBlock Text="⟲" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>


        <TreeView Name="TreeContent" Grid.Row="2" Grid.Column="0" Background="#121212">
        </TreeView>
        <!--<DataGrid Style="{StaticResource DatagridStyle}" Name="DataTable" Grid.Column="1" Grid.Row="2" AutoGenerateColumns="True" CellEditEnding="DataTable_CellEditEnding" PreparingCellForEdit="DataTable_PreparingCellForEdit"  ItemsSource="{Binding }" AddingNewItem="DataTable_AddingNewItem" >
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="DeleteRow" Header="Удалить" Click="DeleteRow_Click"></MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>-->
        
        <!-- Информационное сообщение о успешных действиях -->
        <StackPanel Opacity="0" Name="InfoMessageStackPanel" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 20 20">
            <Border Width="250" Height="40" CornerRadius="10" BorderBrush="White" BorderThickness="1 1 1 1">
                <Grid Clip="{Binding ElementName=rect, Path=RenderedGeometry}">
                    <Rectangle x:Name="rect" RadiusX="10" RadiusY="10" Visibility="Hidden"/>
                    <Grid>
                        <TextBlock Name="InfoMessageTextBlock" Text="Успешное выполнение ..." Foreground="White" Margin="10"/>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>

    </Grid>
</Window>